@model Employee_details_webapp.Models.EditViewModel

<h3>Person details:</h3>

<form method="post" action="EditEmployee" id="employeeform">

    <label asp-for="Employeeid" class="form-label" hidden></label>
    <input type="text" class="form-control" asp-for="Employeeid" hidden>

    <label asp-for="Personid" class="form-label" hidden></label>
    <input type="text" class="form-control" asp-for="Personid" hidden>

    <label asp-for="OriginalPositionid" class="form-label" hidden></label>
    <input type="text" class="form-control" asp-for="OriginalPositionid" hidden >

    <label asp-for="OriginalEmail" class="form-label" hidden></label>
    <input type="text" class="form-control" asp-for="OriginalEmail" hidden >

    <div class="row">
        <div class="col-4">
            <label asp-for="FirstName" class="form-label">FirstName</label>
            <input type="text" class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="MiddleName" class="form-label">MiddleName</label>
            <input type="text" class="form-control" asp-for="MiddleName">
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="LastName" class="form-label">LastName</label>
            <input type="text" class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="Address" class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
 <br /> 
 <br>
 <h3>Employee details:</h3>
    <div class="row">
        <div class="col-6">
            <label asp-for="Salary" class="form-label">Salary</label>
            <input type="text" class="form-control" asp-for="Salary">
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="EmployeeCode" class="form-label">Code</label>
            <input type="number" class="form-control" asp-for="EmployeeCode">
            <span asp-validation-for="EmployeeCode" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="mb-3">
        Select Position
        <select class="form-select" asp-for="Positionid" aria-label="Default select example">
            <option value=@Guid.Parse("00000000-0000-0000-0000-000000000000") selected>Select position</option>
            @foreach (var Position in ViewBag.positions)
            {
                <option value="@Position.Positionid">@Position.PositionName</option>
            }
        </select>
        <span asp-validation-for="Positionid" class="text-danger"></span>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input type="date" class="form-control" asp-for="StartDate">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input type="date" class="form-control" asp-for="EndDate">
        </div>
    </div>
    <br />
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
         <button type="Delete" class="btn btn-danger">Delete</button>
    </div>
</form>