@model Employee_details_webapp.Models.AddViewModel

<div class="container my-5">
    <div class="card">

        <form method="post" action="AddEmployee" id="employeeform">
            <!-- Card header -->
            <div class="card-header py-4 px-5 bg-light border-0">
                <h4 class="mb-0 fw-bold">Add:</h4>
            </div>

            <!-- Card body -->
            <div class="card-body px-5">
                <div class="col-md-4">
                    <h5>Person details:</h5>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="FirstName" class="form-label">First name</label>
                        <input type="text" class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="MiddleName" class="form-label">Middle name</label>
                        <input type="text" class="form-control" asp-for="MiddleName">
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="LastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="col-6">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" asp-for="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <hr class="my-5" />
                <div class="col-md-4">
                    <h5>Employee details:</h5>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label asp-for="Salary" class="form-label">Salary</label>
                        <input type="text" class="form-control" asp-for="Salary">
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="EmployeeCode" class="form-label">Employee code</label>
                        <input type="number" class="form-control" asp-for="EmployeeCode">
                        <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="mb-3">
                    Select Position
                    <select class="form-select" asp-for="Positionid" aria-label="Default select example">
                        <option value=@Guid.Parse("00000000-0000-0000-0000-000000000000") selected>-- No position selected --</option>
                        @foreach (var Position in ViewBag.positions)
                        {
                            <option value="@Position.Positionid">@Position.PositionName</option>
                        }
                    </select>
                    <span asp-validation-for="Positionid" class="text-danger"></span>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <label asp-for="StartDate" class="form-label">Start date</label>
                        <input type="date" class="form-control" asp-for="StartDate">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="EndDate" class="form-label">End date</label>
                        <input type="date" class="form-control" asp-for="EndDate">
                    </div>
                </div>
                <br />
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>

    </div>
</div>